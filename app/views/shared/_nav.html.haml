%div.w-full.bg-blue-300.flex.items-center.py-6
  %div.inline-flex
    %div.font-sans.ml-10.text-2xl.text-white= link_to "amp", root_path
  %div.w-full.flex-grow.lg-flex.lg.inset-y-0.right-0
  - if logged_in?
    %div.font-sans.text-xl.text-white.mr-8= link_to "Upload", root_path
    %div.font-sans.text-xl.text-white.mr-8= link_to "#{current_user.username}", root_path
    %div.font-sans.text-xl.text-white.mr-8= button_to "Logout", logout_path, method: :delete
  - else
    %div.font-sans.text-xl.text-white.mr-8= link_to "Guest", root_path
    %div.font-sans.text-xl.text-white.mr-8= link_to "Login", login_path
